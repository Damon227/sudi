.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.content {
  align-items: center;
  top: 50%;
  position: relative;
  transform: translateY(-50%);
  width: 100%;
}

.row{
  display: flex;
  padding: 0 10px;
}

.menu {
  background-color: #36B2B2;
  color: #FFFFFF;
  margin-top: 20px;
}

button{
  width: 100% !important;
}