.form {
  width: 100%;
  justify-content: center;
  align-items: center;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  padding: 20px 0;
}

.row{
  display: flex;
  padding: 10px 10px;
}

.title{
  text-align: left;
  display: block;
  float: left;
  width: 20%;
  padding: 5px 0;
}

.input{
  display: inline-block;
  padding: 5px 0;
  border-radius: 4px;
  border: 1px solid rgba(220, 223, 230, 1);
  width: 80%;
}

.btn{
  background-color: #36B2B2;
  color: #FFFFFF;
}

button{
  width: 100% !important;
}