.form {
  width: 100%;
  justify-content: center;
}

.row{
  display: flex;
  padding: 5px 10px;
}

.title{
  text-align: left;
  display: block;
  float: left;
  width: 27%;
  padding: 5px 0;
}

.input{
  display: inline-block;
  padding: 5px 0;
  border-radius: 4px;
  border: 1px solid rgba(220, 223, 230, 1);
  width: 73%;
}

.btn{
  background-color: #36B2B2;
  color: #FFFFFF;
}